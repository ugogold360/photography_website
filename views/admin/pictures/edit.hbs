<div class="container">
   <h1>Edit Picture "{{picture.name}}"</h1>
 
<form action="/admin/pictures/edit/{{picture.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name</label>
        <input required name="name" type="text" class="form-control" id="name" value="{{picture.name}}" >
    </div>

    <div class="form-group">
        <label for="fileName">Change Picture</label>
        <input type="file" name="fileName" class="form-control" >
    </div>

  <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
            {{#select categories}}
            {{#each categories}}
            <option value="{{this.id}}">{{this.name}}</option>
           {{/each}}

           {{/select}}
        </select>
    </div>


    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select picture.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            {{/select}}
        </select>
    </div>

    <div class="form-group">
        <label for="description">Edit Description</label>
        <textarea name="description" cols="30" rows="10" class="form-control" id="body">{{picture.description}} </textarea>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>


</form>
</div>