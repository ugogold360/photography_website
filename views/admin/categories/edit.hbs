<div class="container">
   <div class="row">

    <div class="col-md-8 col-lg-8 col-sm-12">
        <h1>Edit Category</h1>
        <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" value="{{category.name}}" name="name" class="form-control">
                </div>

                  <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" cols="30" rows="10" class="form-control">{{category.description}}</textarea>
                </div>

            <button class="btn btn-danger py-3 px-5 rounded">Update Category</button>
        </form>
    </div>

    </div>
</div>